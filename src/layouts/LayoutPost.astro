---
import PostMeta from '~/components/PostMeta.astro'
import type { Post } from '~/types'

interface Props {
  post: Post
  route: 'posts' | 'brain' | 'manifiests' | 'poetry'
}

let { post, route } = Astro.props
---

<article class="prose post-random-order">
  <PostMeta post={post} route={route} />
  <slot />
</article>
