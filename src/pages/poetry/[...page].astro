---
import PaginatedRoute from '../../components/routes/PaginatedRoute.astro'
import type { GetStaticPaths } from 'astro'
import { themeConfig } from '~/.config'
import { getPosts } from '../../utils'

export const getStaticPaths = (async ({ paginate }) => {
  const p = await getPosts()
  const posts = p.filter((post) => post.data.categories.includes('Poesía'))
  return paginate(posts, { pageSize: themeConfig.site.pageSize })
}) satisfies GetStaticPaths
---

<PaginatedRoute {...Astro.props} category="Poesía" title="Planos poéticos" route="poetry" />
